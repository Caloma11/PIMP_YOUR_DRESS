
<div class="register">
  <%= simple_form_for([@consultation, @review]) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :content, placeholder: "Type your review here", label: false, input_html: { rows: 10 } %>
      <%= f.input :rating, collection: 1..5, required: false %>
    </div>

    <div class="form-actions">
      <%= f.button :submit  %>
    </div>
  <% end %>
</div>
