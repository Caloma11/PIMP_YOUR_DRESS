<div class="register">
  <br>
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :first_name, placeholder: 'First Name', autofocus: true, label: false %>
    <%= f.input :last_name, placeholder: 'Last Name', label: false %>
    <%= f.input :email, placeholder: 'E-mail', required: true , label: false%>
    <%= f.input :password, placeholder: 'Password', required: true, label: false, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, placeholder: 'Password Confirmation', required: true , label: false %>
    <%= f.input :user_type, collection: ["Customer", "Advisor"] %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up", class: 'btn-success btn-block btn-lg' %>
  </div>

  <% end %>
  <%#= render "devise/shared/links" %>
</div>
